<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:text="@string/Titulo_prb"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:columnCount="4"
        app:rowCount="4"
        app:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TextView style="@style/Boton_Normal"
            android:id="@+id/txtNum7"
            android:text="7"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/Boton_Normal"
            android:id="@+id/txtNum8"
            android:text="8"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/Boton_Normal"
            android:id="@+id/txtNum9"
            android:text="9"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/boton_operacion"
            android:id="@+id/txtNumC"
            android:text="C"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/Boton_Normal"
            android:id="@+id/txtNum4"
            android:text="4"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/Boton_Normal"
            android:id="@+id/txtNum5"
            android:text="5"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/Boton_Normal"
            android:id="@+id/txtNum6"
            android:text="6"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/boton_operacion"
            android:id="@+id/txtNumSuma"
            android:text="+"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/Boton_Normal"
            android:id="@+id/txtNum1"
            android:text="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/Boton_Normal"
            android:id="@+id/txtNum2"
            android:text="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/Boton_Normal"
            android:id="@+id/txtNum3"
            android:text="3"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/boton_operacion"
            android:id="@+id/txtNumResta"
            android:text="-"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <TextView style="@style/Boton_Normal"
            android:id="@+id/txtNum0"
            android:text="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_columnSpan="2"/>


        <TextView style="@style/boton_operacion"
            android:id="@+id/txtNumIgual"
            android:text="="
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_columnSpan="2"/>



    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>